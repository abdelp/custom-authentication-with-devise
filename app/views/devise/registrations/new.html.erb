<h2 class="text-center">Sign up</h2>

<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'text-center' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="avatar-container">
      <div class="avatar-wrapper">
        <%= image_tag('default-profile.png', alt: "default", class: "avatar", id: "img-prev") %>
      </div>
      <%= button_tag "Upload image", class: "btn btn-default", type: "button",id: "change-img-btn" %>
      <%= f.file_field :avatar,
        placeholder: 'Upload picture',
        id: "change-img-field",
        accept: "image/x-png,image/gif,image/jpeg",
        onchange: "changeImg(this);",
        direct_upload: true
        %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>